<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.shop.ManageShopUpdatePwdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/manage_shop_update_pwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="修改密码"
        app:titleTextColor="@color/white"
        android:background="@color/themeBlue"
        app:navigationIcon="@drawable/back"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_marginTop="50dp"
                />

            <EditText
                android:id="@+id/manage_shop_update_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/manage_shop_update_repwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                />

            <Button
                android:id="@+id/manage_shop_update_pwd_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="修改密码"
                android:textColor="#FFF"
                android:background="@color/themeBlue"
                android:foreground="?android:selectableItemBackground"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>