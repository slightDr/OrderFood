<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.shop.ManageShopActivity">

    <FrameLayout
        android:id="@+id/manage_shop_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F0F0"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/shop_bottom_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manage_shop_frame"
        android:background="@color/white"
        app:itemIconTint="@color/select_color"
        app:itemTextColor="@color/select_color"
        app:menu="@menu/shop_bottom_menu"/>

</LinearLayout>