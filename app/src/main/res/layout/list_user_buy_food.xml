<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_buy_dialog_food_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/upload_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/user_buy_dialog_food_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="test food name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="x"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/themeBlue"
        android:layout_marginRight="1dp"/>

    <TextView
        android:id="@+id/user_buy_dialog_food_num"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="num份"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/themeBlue"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/user_buy_dialog_food_totprice"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="￥ 100"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right|center_horizontal|center_vertical"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/themeBlue"
        android:layout_marginRight="0dp"
        android:layout_weight="1" />

</LinearLayout>