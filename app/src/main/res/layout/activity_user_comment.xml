<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.user.foodAct.UserCommentActivity"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="评论"
        app:titleTextColor="@color/white"
        android:background="@color/themeBlue"
        app:navigationIcon="@drawable/back"
        />

    <EditText
        android:id="@+id/user_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入评论内容"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:maxLines="5"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@android:drawable/edit_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/user_comment_star_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/yellow_star"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/user_comment_star_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/yellow_star"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/user_comment_star_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/yellow_star"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/user_comment_star_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/yellow_star"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/user_comment_star_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/yellow_star"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/user_comment_score_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="非常满意"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/user_comment_upload_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/upload_img"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/user_comment_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表"
        android:textColor="@color/white"
        android:background="@drawable/button_round"
        android:layout_gravity="right"/>

</LinearLayout>